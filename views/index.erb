<!DOCTYPE html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= seo.index.title %></title>
    <meta name="description" content="<%= seo.index.description %>">
    <meta name="keywords" content="<%= seo.index.keywords %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:800italic,400,700,300' rel='stylesheet' type='text/css'>
    <%= css :application %>

    <meta property="og:image" content="http://randmovie.com/images/randmovie-fb.png"/>
    <meta property="og:title" content="Find out a random movie to watch :)"/>
    <meta property="og:site_name" content="Randmovie"/>
    <meta property="og:type" content="blog"/>

  </head>
  <body class="is-overflowed">
    <div class="blur-effect"></div>
    <header class="clearfix l-header is-above">
      <div class="wrap">
        <h1 class="logo">
          RandMovie
        </h1>
      </div>
    </header>

    <div class="clearfix l-content fade-in-content is-above is-hidden">
      <div class="wrap">

        <div id="movie-item">
        </div>

        <div class="clearfix aligncenter">
          <a href="#" class="btn" id="next-movie">
            Next Movie
          </a>
        </div>

      </div>

      <footer class="is-hidden fade-in-content">
        <p>By <a href="http://weslleydeveloper.com" target="_blank" class="footer-link">Weslley Araujo</a></p>
      </footer>

    </div>

    <%= js :vendor %>

    <!-- Movie Template -->
    <script type="text/template" data-template="movie">
      <div class="movie-description-image">
        <img src="/static/cover/cover-{{ imdb_id }}.jpg" />
      </div>
      <div class="movie-description-info">
        <h3 class="movie-description-title {{ is_small }}">{{ title }}</h3>
        <h4 class="movie-description-year">({{ year }})</h4>
        <p>{{ plot_simple }}</p>
      </div>
    </script>

    <!-- app -->
    <%= js :app %>

    <!-- GA -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-46609304-1', 'randmovie.com');
      ga('send', 'pageview');
    </script>

  </body>
</html>
